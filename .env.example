# SourceInfo API Configuration
# Copy this file to .env and adjust as needed

# Database - use absolute path for local development
DB_PATH=/path/to/SourceInfo/data/sources.db

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Counternarrative Defaults
DEFAULT_MIN_CREDIBILITY=60
DEFAULT_COUNTERNARRATIVE_LIMIT=10

# OpenRouter LLM API (required for content analysis)
# Get your API key at https://openrouter.ai/keys
OPENROUTER_API_KEY=your_api_key_here
DEFAULT_ANALYSIS_MODEL=anthropic/claude-sonnet-4
